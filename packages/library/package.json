{
  "name": "lab.js",
  "description": "Building blocks for web-based behavioral experiments",
  "version": "2017.2.0",
  "author": "Felix Henninger <mailbox@felixhenninger.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/felixhenninger/lab.js.git"
  },
  "homepage": "https://felixhenninger.github.io/lab.js",
  "main": "dist/lab.js",
  "module": "src/index.js",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-runtime": "^6.23.0",
    "core-js": "^2.4.1",
    "es2015-proxy": "^0.1.7",
    "es6-promise": "^4.1.0",
    "file-saver": "^1.3.3",
    "lodash": "^4.14.1",
    "seedrandom": "^2.4.3",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-plugin-lodash": "^3.2.6",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-regenerator": "^6.24.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-regenerator-runtime": "^6.5.0",
    "chai": "^4.1.0",
    "eslint": "^4.2.0",
    "eslint-config-airbnb": "^15.0.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "karma": "^1.7.0",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "karma-sauce-launcher": "1.1.0",
    "karma-sinon": "^1.0.5",
    "lodash-webpack-plugin": "^0.11.3",
    "mocha": "^3.5.2",
    "onchange": "^3.0.2",
    "postcss-cli": "^4.1.0",
    "postcss-cssnext": "^3.0.0",
    "requirejs": "^2.3.3",
    "sinon": "^4.2.2",
    "webpack": "^3.3.0",
    "webpack-bundle-analyzer": "^2.9.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "airbnb",
    "rules": {
      "key-spacing": [2, { "mode": "minimum" }],
      "no-console": 0,
      "no-else-return": 1,
      "no-param-reassign": 1,
      "no-warning-comments": ["error", { "terms": [ "fixme", "xxx" ] }],
      "prefer-rest-params": 1,
      "radix": [2, "as-needed"],
      "react/no-multi-comp": 0,
      "react/sort-comp": 0,
      "semi": [2, "never"],
      "space-before-function-paren": [2, "never"],
      "space-infix-ops": 1,
      "template-curly-spacing": [2, "always"]
    },
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    }
  },
  "scripts": {
    "analyze": "NODE_ENV=analysis webpack --profile --json > bundleStats.json",
    "build:js:coverage": "NODE_ENV=coverage webpack -d",
    "build:js:development": "webpack -d",
    "build:js:production": "webpack",
    "build:js": "npm run build:js:development && npm run build:js:production",
    "build:starterkit:css": "postcss --local-plugins -u postcss-cssnext -o dist/labjs-starterkit/lib/lab.css src/starterkit/lib/lab.css",
    "build:starterkit:static": "cp src/starterkit/index.html dist/labjs-starterkit && cp src/starterkit/experiment.js dist/labjs-starterkit && cp dist/lab.dev.js dist/labjs-starterkit/lib && cp dist/lab.js dist/labjs-starterkit/lib && cp dist/lab.js.map dist/labjs-starterkit/lib && cp src/starterkit/lib/loading.svg dist/labjs-starterkit/lib",
    "build:starterkit:bundle": "cd dist && zip -r labjs-starterkit.zip labjs-starterkit",
    "build:starterkit": "npm run build:js && npm run build:starterkit:css && npm run build:starterkit:static && npm run build:starterkit:bundle",
    "clean:js": "rm -rfv dist && mkdir dist",
    "lint": "eslint src",
    "prepublish": "npm run build:starterkit",
    "test": "karma start test/_karma/ci.conf.js",
    "test:coverage": "npm run build:js:coverage && karma start test/_karma/coverage.conf.js",
    "test:sauce": "karma start test/_karma/sauce.conf.js",
    "watch:js": "onchange 'src/**/*' -- npm run build:js"
  }
}
